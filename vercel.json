{
    "rewrites": [
      { "source": "/(.*)", "destination": "/api/index.js" }
    ],
    "functions": {
        "api/index.js": {
          "memory": 1024,
          "includeFiles": "wp/**",
          "maxDuration": 60
        }
    },
    "build": {
      "env": {
        "NODEJS_AWS_HANDLER_NAME": "handler"
      }
    }
}